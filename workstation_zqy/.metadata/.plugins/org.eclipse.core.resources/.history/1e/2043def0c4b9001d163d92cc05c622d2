/* gtz.h */


#ifndef GTZ_H_
#define GTZ_H_

#define SAMPLING_RATE  8000.0
#define TICK_PERIOD    (1/SAMPLING_RATE)  /*125us set in clock.cfg */
#define TIMEOUT        1
#define NO_OF_SAMPLES  (206*8)
#define PI             3.1415926535897932384626433832795

#define SAMPLING_RATE 8000
#define N SAMPLING_RATE / 100
#define DIGHIT_NUM 8
#define DTMF_NUM 8
#define DTMF_HALF_NUM DTMF_NUM/2

#define THRESHOLD_POWER
const int N_const = 206;

short dtmf_frequencies[DTMF_NUM] = {697, 770, 852, 941, 1209, 1336, 1477, 1633};
short dtmf_coef[DTMF_NUM] = {0x6D02, 0x68AD, 0x63FC, 0x5EE7, 0x4A70, 0x4090, 0x3290, 0x23CE };  // goertzel coefficients
char dtmf_keys[DTMF_HALF_NUM][DTMF_HALF_NUM] = {
  {'1', '2', '3', 'A'},
  {'4', '5', '6', 'B'},
  {'7', '8', '9', 'C'},
  {'*', '0', '#', 'D'}
};
int digit_freqs[16][2] = {
    {697, 1209}, // 1
    {697, 1336}, // 2
    {697, 1477}, // 3
    {697, 1633}, // A
    {770, 1209}, // 4
    {770, 1336}, // 5
    {770, 1477}, // 6
    {770, 1633}, // B
    {852, 1209}, // 7
    {852, 1336}, // 8
    {852, 1477}, // 9
    {852, 1633}, // C
    {941, 1209}, // *
    {941, 1336}, // 0
    {941, 1209}, // #
    {941, 1633}  // D
};

#endif /* GTZ_H_ */
